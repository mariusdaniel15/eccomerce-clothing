@model Product
<form method="post">
    <div class="card shadow border-0 mt-4">
        <div class="card-body">
            <div class="py-3">
                <div class="row d-flex justify-content-around px-4">
                    <div class="col-6 col-md-2 offset-lg-1"></div>
                    <div class="col-md-6 offset-lg-4 text-end pb-1">
                        @if (@Model.CategoryId == 1)
                        {
                            <a asp-action="Products" asp-route-categoryId="1" class="btn btn-outline-primary bg-gradient fw-semibold btn-sm text-uppercase">
                                <small>BACK</small>
                            </a>
                        }
                        else if(@Model.CategoryId == 2)
                        {
                            <a asp-action="Products" asp-route-categoryId="2" class="btn btn-outline-primary bg-gradient fw-semibold btn-sm text-uppercase">
                                <small>BACK</small>
                            </a>
                        }
                        else
                        {
                            <a asp-action="Products" asp-route-categoryId="3" class="btn btn-outline-primary bg-gradient fw-semibold btn-sm text-uppercase">
                                <small>BACK</small>
                            </a>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" style="width:100%" class="rounded" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1 my-3">
                        <div class="d-flex flex-column justify-content-center h-100">
                            <div class="col-12 col-md-6 pl-2 pb-2">
                                <span class="badge rounded-pill bg-info text-dark">@Model.Category.Name</span>
                            </div>
                            <div class="col-12 col-md-6 pb-2">
                                <div class="text-dark fs-3">@Model.Name</div>
                            </div>
                            <div class="row pl-2">
                                <h6 class="text-dark text-opacity-50">SKU: @Model.SKU</h6>
                            </div>
                            <div class="row pl-2">
                                <p class="text-dark text-opacity-50">@Html.Raw(Model.Description)</p>
                            </div>
                            <div class="row pl-2 mb-5 align-items-center">
                                <div class="col-6 col-md-3">
                                    <div class="text-dark text-opacity-50">PRICE:</div>
                                </div>
                                <div class="col-6 col-md-3">
                                    <div class="pl-2 col-3 col-lg-2 bg-white text-warning fw-bold text-center">
                                        <div style="white-space: nowrap; vertical-align: middle;">@($"{Model.Price:c}")</div>
                                    </div>
                                </div>
                            </div>
                            <div class="row pl-2 mb-3">
                                <div class="col-md-4">
                                    <div class="input-group mb-3">
                                        <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                              id="inputGroup-sizing-default">
                                            Count
                                        </span>
                                        <input type="number" value="1" class="form-control text-end"
                                               aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 pb-1">
                                    <button type="submit"
                                            class="btn btn-warning text-uppercase fw-semibold">
                                        Add to Cart
                                    </button>
                                </div>
                            </div>

                            
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
