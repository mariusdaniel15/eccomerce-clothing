@model ProductDiscountVM

<form method="post">
    <input asp-for="@Model.Discount.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2 text-center">
            <h2 class="text-primary">EDIT DISCOUNT</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Discount.Name" class="p-0"></label>
            <input asp-for="Discount.Name" type="text" class="form-control" />
            <span asp-validation-for="Discount.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Discount.Description" class="p-0"></label>
            <input asp-for="Discount.Description" type="text" class="form-control" />
            <span asp-validation-for="Discount.Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Discount.DiscountPercent" class="p-0"></label>
            <input asp-for="Discount.DiscountPercent" type="text" class="form-control" />
            <span asp-validation-for="Discount.DiscountPercent" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Discount.Active" class="p-0"></label>
            <select asp-for="Discount.Active" asp-items="@Model.IsActiveOptions" class="form-select border-0 ">
                <option disabled selected>-Active or Not-</option>
            </select>
            <span asp-validation-for="Discount.Active" class="text-danger"></span>
        </div>
        <div class="row justify-content-center">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">
                    UPDATE
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Discount" asp-action="Index" class="btn btn-outline-secondary form-control">
                    GO BACK
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
