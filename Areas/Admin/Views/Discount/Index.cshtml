@model List<ProductDiscount>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                DISCOUNT LIST
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Discount" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-fill-add"></i>  NEW DISCOUNT
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                NAME
            </th>
            <th>
                DESCRIPTION
            </th>
            <th>
                DISCOUNT PERCENT
            </th>
            <th>
                Active
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.Description</td>
                <td>@obj.DiscountPercent</td>
                <td>@obj.Active</td>
                <td>
                    <div class="d-flex justify-content-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Discount" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> EDIT
                            </a>
                            <a asp-controller="Discount" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> DELETE
                            </a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>