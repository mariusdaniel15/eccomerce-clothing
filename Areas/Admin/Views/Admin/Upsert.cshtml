@model AdminDataEditViewModel

<form method="post">
    <input asp-for="AdminUser.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2 text-center">
            <h2 class="text-primary">@(Model.AdminUser.Id != 0 ? "EDIT" : "CREATE") ADMIN</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row p-1">
            <label asp-for="AdminUser.Username" class="p-0"></label>
            <input asp-for="AdminUser.Username" type="text" class="form-control" />
            <span asp-validation-for="AdminUser.Username" class="text-danger"></span>
        </div>
        @if (Model.AdminUser.Id == 0)
        {
            <div class="mb-3 row p-1">
                <label asp-for="AdminUser.Password" class="p-0"></label>
                <input asp-for="AdminUser.Password" type="password" class="form-control"/>
                <span asp-validation-for="AdminUser.Password" class="text-danger"></span>
            </div>
        }
        <div class="mb-3 row p-1">
            <label asp-for="AdminUser.FirstName" class="p-0"></label>
            <input asp-for="AdminUser.FirstName" type="text" class="form-control" />
            <span asp-validation-for="AdminUser.FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="AdminUser.LastName" class="p-0"></label>
            <input asp-for="AdminUser.LastName" type="text" class="form-control" />
            <span asp-validation-for="AdminUser.LastName" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="AdminUser.TypeId" class="p-0"></label>
            <select asp-for="AdminUser.TypeId" asp-items="@Model.AdminTypeList" class="form-select border-0 ">
                <option disabled selected>-Select Admin Type-</option>
            </select>
            <span asp-validation-for="AdminUser.TypeId" class="text-danger"></span>
        </div>

        <div class="row justify-content-center">
            <div class="col-6 col-md-3">
                @if (Model.AdminUser.Id != 0)
                {
                    <button type="submit" class="btn btn-primary form-control">
                        UPDATE
                    </button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary form-control">
                        CREATE
                    </button>
                }
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary form-control">
                    GO BACK
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <script>
            // JavaScript to handle password field validation
            document.getElementById('userForm').addEventListener('submit', function (e) {
                if (document.getElementById('passwordField').value.trim() === '') {
                    // Password field is empty, remove it from the form data
                    e.preventDefault();
                }
            });
        </script>
        <partial name="_ValidationScriptsPartial"/>
    }
}