@model UserInfoViewModel

<form method="post">
    <input asp-for="User.Id" type="hidden" />
    <div class="border p-3 mt-4">
        <div class="row pb-2 text-center">
            <h2 class="text-primary">@(Model.User.Id != 0 ? "EDIT" : "CREATE") USER</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row p-1">
            <label asp-for="User.Username" class="p-0"></label>
            <input asp-for="User.Username" type ="text" class="form-control" />
            <span asp-validation-for="User.Username" class="text-danger"></span>
        </div>
        @if (Model.User.Id == 0)
        {
        <div class="mb-3 row p-1">
            <label asp-for="User.Password" class="p-0"></label>
            <input asp-for="User.Password" type="password" class="form-control" />
            <span asp-validation-for="User.Password" class="text-danger"></span>
        </div>
        }
        <div class="mb-3 row p-1">
            <label asp-for="User.FirstName" class="p-0"></label>
            <input asp-for="User.FirstName" type="text" class="form-control" />
            <span asp-validation-for="User.FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="User.LastName" class="p-0"></label>
            <input asp-for="User.LastName" type="text" class="form-control" />
            <span asp-validation-for="User.LastName" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="User.Telephone" class="p-0"></label>
            <input asp-for="User.Telephone" type="text" class="form-control" />
            <span asp-validation-for="User.Telephone" class="text-danger"></span>
        </div>
        <hr />
        <div class="mb-3 row p-1">
            <label asp-for="Address.AddressLine1" class="p-0"></label>
            <input asp-for="Address.AddressLine1" type="text" class="form-control" />
            <span asp-validation-for="Address.AddressLine1" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Address.AddressLine2" class="p-0"></label>
            <input asp-for="Address.AddressLine2" type="text" class="form-control" />
            <span asp-validation-for="Address.AddressLine2" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Address.City" class="p-0"></label>
            <input asp-for="Address.City" type="text" class="form-control" />
            <span asp-validation-for="Address.City" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Address.Country" class="p-0"></label>
            <input asp-for="Address.Country" type="text" class="form-control" />
            <span asp-validation-for="Address.Country" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Address.PostalCode" class="p-0"></label>
            <input asp-for="Address.PostalCode" type="text" class="form-control" />
            <span asp-validation-for="Address.PostalCode" class="text-danger"></span>
        </div>
        <hr />
        <div class="mb-3 row p-1">
            <label asp-for="Payment.PaymentType" class="p-0"></label>
            <input asp-for="Payment.PaymentType" type="text" class="form-control" />
            <span asp-validation-for="Payment.PaymentType" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Payment.Provider" class="p-0"></label>
            <input asp-for="Payment.Provider" type="text" class="form-control" />
            <span asp-validation-for="Payment.Provider" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Payment.AccountNo" class="p-0"></label>
            <input asp-for="Payment.AccountNo" type="text" class="form-control" />
            <span asp-validation-for="Payment.AccountNo" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Payment.Expiry" class="p-0"></label>
            <input asp-for="Payment.Expiry" type="text" class="form-control" />
            <span asp-validation-for="Payment.Expiry" class="text-danger"></span>
        </div>


        <div class="row justify-content-center">
            <div class="col-6 col-md-3">
                @if (Model.User.Id != 0)
                {
                    <button type="submit" class="btn btn-primary form-control">
                        UPDATE
                    </button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary form-control">
                        CREATE
                    </button>
                }
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary form-control">
                    GO BACK
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <script>
                  // JavaScript to handle password field validation
                  document.getElementById('userForm').addEventListener('submit', function (e) {
                      if (document.getElementById('passwordField').value.trim() === '') {
                          // Password field is empty, remove it from the form data
                          e.preventDefault();
                      }
                  });
        </script>
        <partial name="_ValidationScriptsPartial"/>
    }
}