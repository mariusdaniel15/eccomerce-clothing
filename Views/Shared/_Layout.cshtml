<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - amazin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/amazin.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <style>
        html {
            overflow-y: scroll;
        }
        #toast-container > .toast-success {
            background-color: steelblue;
            opacity: 1 !important;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.5);
        }

        #toast-container > .toast-error {
            background-color: #BD362F;
            opacity: 1 !important;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.5);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-flex justify-content-evenly align-items-center">
                    <div class="navbar-left">
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link text-light dropdown-toggle" role="button" id="mainDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    CONTENT
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="mainDropdown">
                                    <li>
                                        <a class="dropdown-item text-dark">
                                            PRODUCTS
                                        </a>
                                        <ul class="dropdown-menu dropdown-submenu">
                                            <li>
                                                <a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index">PRODUCTS</a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">CATEGORIES</a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-area="Admin" asp-controller="Inventory" asp-action="Index">INVENTORY</a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-area="Admin" asp-controller="Discount" asp-action="Index">DISCOUNTS</a>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link text-light dropdown-toggle" role="button" id="mainDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    USERS
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="mainDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="Index">ADMINS</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="Index">USERS</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="" asp-action="Index">
                                    <i class="bi bi-search"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="navbar-center">
                        <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">
                            <img src="~/images/firstpage/logo2.png" alt="logo" class="img-fluid"/>
                        </a>
                    </div>
                    <div class="navbar-right">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-light" style="margin-right: 10px;">
                                    REGISTER
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" style="margin-right: 10px;">
                                    LOGIN
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" style="margin-right: 10px;" asp-area="" asp-controller="" asp-action="Index">
                                    <i class="bi bi-cart2"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bg-body-tertiary text-primary text-center">
        <div class="container">
            &copy; 2023 - amazin - <i class="bi bi-cloud-fog2-fill"></i>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/vtzyvtx9j23x2m40b7h94co02pxpapr2h3lbtt7k5xa8nksc/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/scroll.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
